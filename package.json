{
  "name": "notion-to-ssg",
  "version": "1.0.3",
  "description": "Export Notion databases to Markdown files for static site generators like 11ty, with automatic image downloading and flexible configuration",
  "main": "src/index.js",
  "bin": {
    "notion-to-ssg": "src/cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "export": "node src/cli.js",
    "prepublishOnly": "npm pack --dry-run",
    "lint": "echo \"No linter configured yet\"",
    "format": "echo \"No formatter configured yet\"",
    "release": "release-it",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:patch": "release-it patch",
    "release:dry": "release-it --dry-run"
  },
  "keywords": [
    "notion",
    "11ty",
    "eleventy",
    "markdown",
    "export",
    "static-site-generator",
    "ssg",
    "cms",
    "notion-api",
    "jamstack"
  ],
  "author": "ZeFish",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZeFish/notion-to-ssg.git"
  },
  "bugs": {
    "url": "https://github.com/ZeFish/notion-to-ssg/issues"
  },
  "homepage": "https://github.com/ZeFish/notion-to-ssg#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.15",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "notion-to-md": "^3.1.1",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^8.0.2",
    "release-it": "^17.10.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "notion.config.example.yml",
    "notion.config.example.json",
    ".env.example"
  ]
}
